- if comment.id?
  %p
    %strong Commenter:
    = comment.commenter
  %p
    %strong Comment:
    = comment.body
  %p
    %strong Created At:
    = comment.created_at.strftime("%Y-%m-%d")

  %p
    = link_to "Destroy Comment", [comment.article, comment], method: :delete, data: {confirm: "Are you sure?"}